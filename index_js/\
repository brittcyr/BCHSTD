var div_layers = ['link1', 'link2']; 


function view(id)
{
	document.getElementById(id).style.display="block";
	disable();
}

function hide(id)
{
	document.getElementById(id).style.display="none";
	enable();
}

function disable()
{
	for (var id in div_layers)
	{
		alert("hello");
		alert(document.getElementById("login").style.display);
		alert("erg");
	}
}

function enable()
{
	for (var id in div_layers)
	{
		document.getElementById(id).disabled=false;
	}
}
