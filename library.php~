<?php

function checkemail($email)
{
$email = htmlspecialchars($_POST['user_email']);

$email_split = explode('@',$email);
if ( count($email_split) <>  2){return 0;}

$name = $email_split[0];
$domain = $email_split[1];

$domain_split = explode('.',$domain);
if ( count($domain_split) <>  2){return 0;}

return 1;
}



?>
